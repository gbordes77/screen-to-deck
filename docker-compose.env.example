# 🔐 MTG Deck Scanner - Environment Configuration
# Copy this file to .env and fill in your actual values

# 🤖 OpenAI Configuration (Required for web app)
OPENAI_API_KEY=your_openai_api_key_here

# 🤖 Discord Bot Configuration (Required for Discord bot)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# 🌐 Web Application Configuration
NODE_ENV=production
PORT=3001
CORS_ORIGIN=http://localhost:5173

# 🎨 Frontend Configuration
VITE_API_URL=http://localhost:3001/api

# 📊 Database Configuration (Optional - future feature)
DATABASE_URL=postgresql://user:password@localhost:5432/mtg_scanner

# 📧 Email Configuration (Optional - future feature)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# 🔐 JWT Configuration (Optional - future feature)
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# 📊 Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# 🐳 Docker Configuration
COMPOSE_PROJECT_NAME=mtg-scanner

# 🔧 Debug Configuration
DEBUG=false
LOG_LEVEL=info

# 🌐 Production Domain (for deployment)
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com 