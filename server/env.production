# üöÄ SCREEN-TO-DECK - CONFIGURATION PRODUCTION V1
# Copier vers .env et remplir avec les vraies valeurs
# =================================================

# üñ•Ô∏è SERVER CONFIGURATION
PORT=3001
NODE_ENV=production

# ü§ñ OPENAI CONFIGURATION (OBLIGATOIRE)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4-vision-preview
OPENAI_MAX_TOKENS=150

# üåê CORS CONFIGURATION
CORS_ORIGIN=https://screen-to-deck.fly.dev

# ‚ö° RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# üìÅ FILE UPLOAD CONFIGURATION
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp
TEMP_DIR=/tmp

# üîç SCRYFALL API CONFIGURATION
SCRYFALL_API_URL=https://api.scryfall.com

# ‚òÅÔ∏è CLOUDFLARE R2 STORAGE 
CLOUDFLARE_R2_ACCOUNT_ID=your-account-id-here
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key-here
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key-here
CLOUDFLARE_R2_BUCKET_NAME=screen-to-deck-storage
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_PUBLIC_URL=https://storage.screen-to-deck.com

# üóÑÔ∏è SUPABASE CONFIGURATION (SaaS DATABASE)
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# üöÄ REDIS CONFIGURATION (CACHE)
REDIS_URL=redis://localhost:6379

# üìà LOGGING
LOG_LEVEL=info 